@model TDanhMucRauCu
<div class="col-md-6 col-lg-3 ftco-animate fadeInUp ftco-animated">
    <div class="product">
        <a asp-controller="Home" asp-action="SanPhamChiTiet" asp-route-maSp="@Model.MaRauCu" class="img-prod">
            <img class="img-fluid" src=@Url.Content(Model.HinhAnh) alt="Colorlib Template">
            <div class="overlay"></div>
        </a>
        <div class="text py-3 pb-4 px-3 text-center">
            <h3><a asp-controller="Home" asp-action="SanPhamChiTiet" asp-route-maSp="@Model.MaRauCu">@Model.TenRauCu</a></h3>
            <div class="d-flex">
                <div class="pricing">
                    <p class="price"><span>@Model.DonGia</span></p>
                </div>
            </div>
            <div class="bottom-area d-flex px-3">
                <div class="m-auto d-flex">
                    @* <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                    <span><i class="ion-ios-menu"></i></span>
                    </a> *@
                    <a asp-controller="Home" asp-action="SanPhamChiTiet" asp-route-maSp="@Model.MaRauCu" class="buy-now d-flex justify-content-center align-items-center mx-1">
                        <span><i class="ion-ios-cart"></i></span>
                    </a>
                    @* <a href="#" class="heart d-flex justify-content-center align-items-center ">
                    <span><i class="ion-ios-heart"></i></span>
                    </a> *@
                </div>
            </div>
        </div>
    </div>
</div>