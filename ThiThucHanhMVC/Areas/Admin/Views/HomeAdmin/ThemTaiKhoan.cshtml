@model ThiThucHanhMVC.Models.TUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ThemTaiKhoan</h1>

<h4>TUser</h4>
<hr />
